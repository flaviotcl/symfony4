{% extends 'base.html.twig' %}

{% block title %}Listagem de Produtos - {% endblock %}

{% block body %}

    <h1>Listando Produtos</h1>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <a href="" class="btn btn-primary btn-lg float-right">Adicionar Produto</a>
        </div>
    </div>

    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>

            {% for produto in produtos %}
                <tr>
                    <td>{{ produto.id }}</td>
                    <td>{{ produto.nome }}</td>
                    <td>{{ produto.preco }}</td>
                    <td>
                        <a class="btn btn-sm btn-warning" href=""><i class="fa fa-eye"></i></a>
                        <a class="btn btn-sm btn-success" href=""><i class="fa fa-pencil"></i></a>
                        <a class="btn btn-sm btn-danger" href=""><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>



{% endblock %}
