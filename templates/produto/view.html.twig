{% extends "base.html.twig" %}


{% block title %}

    Visualização de Produto -

{% endblock %}

{% block body %}
    <h1>Edição de Produto - <small>{{ produto.nome }}</small></h1>
    <hr>

    <table class="table table-striped">

        <tbody>
        <tr>
            <th>Código</th>
            <td>{{ produto.id }}</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>{{ produto.nome }}</td>
        </tr>
        <tr>
            <th>Preço</th>
            <td>{{ produto.preco }}</td>
        </tr>
        <tr>
            <th>Descrição</th>
            <td>{{ produto.descricao }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}

